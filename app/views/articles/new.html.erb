<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>

<h1 class="mt-4 text-center" id="orange-color">Create a new article</h1>

<div class="row justify-content-center">

<div class="col-6">

  <%= form_with model: @article do |f| %>
    
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :text %>
      <%= f.text_area :text, class: "form-control", rows: "6" %>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <%= f.collection_select(:category_ids, Category.all, :id, :name,
        { prompt: 'Select at least one article category' },
        { multiple: true, size: 3, required: true, class: "form-control"})%>
    </div>
    
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, required: true, class: "form-control-file" %>
    </div>

    <%= f.submit class: "btn btn-primary" %>

  <% end %>

  </div>
</div>