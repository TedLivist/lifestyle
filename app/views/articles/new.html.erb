<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>

<%= form_with model: @article do |f| %>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label :text %>
  <br>
  <%= f.text_area :text %>
  <br><br>
  <%= f.submit %>
<% end %>