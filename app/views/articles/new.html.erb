<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>

<%= form_with model: @article do |f| %>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label :text %>
  <br>
  <%= f.text_area :text %>
  <br><br>
  <%= f.label :category %>
  <%= f.collection_select(:category_ids, Category.all, :id, :name,
    { prompt: 'Select at least one article category' },
    {required: true})%>
  <br><br>
  <%= f.submit %>
<% end %>