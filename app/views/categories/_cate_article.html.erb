<div class="cat-container">
  <% obj.articles.order(created_at: :desc).each do |article| %>
    <div class="cat-article-container cat-container-color">
      <div class="px-2 article-side">
        <p class="mb-2 mt-4 cate-article-title"><%= article.title %><p>
        <p><%= simple_format(truncate(article.text, length: 50)) %></p>
        <p class="mt-3"><%= article.author.username %></p>

        <p class="mb-0 mt-2">Votes: <%= article.votes.count %></p>
        <br>
        <p><%= link_to 'Read More', article_path(article), id: "orange-color" %></p>
        <% if user_signed_in? and article.author == current_user %>
          <%= link_to 'Delete Article', article, class: "btn btn-danger del-btn mb-2", method: :delete %>
        <% end %>
        
      </div>
      <div style="width: 100%">
        <image width="100%" height="380px" style="margin: 0" src="<%= url_for(article.image)%>">
      </div>
    </div>
  <% end %>
</div>